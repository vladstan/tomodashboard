{
  "root": true,
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "impliedStrict": true
    },
    "sourceType": "script"
  },
  "rules": {
    "max-len": [1, 120, 2, {
      "ignoreComments": true
    }],
    "quote-props": [1, "consistent-as-needed"],
    "semi": [2, "always"],
    "space-before-function-paren": [1, "never"],
    "arrow-parens": [1, "always"],
    "comma-dangle": [1, "always-multiline"],
    "no-trailing-spaces": 1,
    "no-new": 0,
    "quotes": 0
  }
}
